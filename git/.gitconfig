[user]
  name = Arhun Saday
  email = arhunsad@gmail.com

[core]
  editor = lvim
  autocrlf = false
[diff]
  tool = lvim
[merge]
  tool = lvim
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[difftool "lvim"]
  cmd = lvim -d $LOCAL $REMOTE
[mergetool "vscode"]
  cmd = code --wait $MERGED
[mergetool "lvim"]
  cmd = lvim $MERGED

[pull]
  rebase = true
  autostash = true
[push]
  autoSetupRemote = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[init]
  defaultBranch = main
[help]
  autocorrect = 01

[alias]
  a = add
  b = branch
  c = commit
  d = diff
  f = fetch
  g = grep
  l = log
  m = merge
  o = checkout
  s = status -sb
  p = pull
  r = remote
  w = whatchanged

  undo = reset HEAD~1 --mixed
  unstage = reset --soft HEAD^
  rv = revert

  co = checkout
  cob = checkout -b
  coo = !git fetch && git checkout
  rom = !git fetch && git rebase -i origin/master --autosquash

  res = !git reset --hard
  done = !git push origin HEAD
  resetwd = !git clean -fd && git reset --hard

  cm = commit -m
  cam = commit -a -m
  fix = commit --fixup
  amend = commit --amend -m
  rv = remote -v
  forcepush = push --force-with-lease <remote> <branch>
  commitamend = commit --amend --no-edit

  rb = rebase
  rbc = rebase --continue
  rba = rebase --abort
  rbs = rebase --skip

  save = "!f() { stash_name=$1; git stash save -u \"$stash_name\"; }; f"
  stashlist = "stash list --pretty=format:'%C(yellow)%h %C(red)%gd %C(green)%cr %C(bold blue)%s%d %C(reset)%b'"
  sa = "!f() { stash_name=$1; git stash save -u \"$stash_name\" && git stash apply \"stash@{0}\"; }; f"
  pop = stash pop
  apply = stash apply

  aa = add -A .
  cp = cherry-pick
  pu = !git push origin `git branch --show-current`
  fush = push -f
  mg = merge --no-ff

  last = log -1 HEAD --stat
  lg = log --graph --all --pretty=format:'%Cred%h%Creset - %s %Cgreen(%cr) %C(bold blue)%an%Creset %C(yellow)%d%Creset'

  br = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
  brd = branch -d
  
  find = log --all --pretty=\"format:%Cgreen%H %Cblue%s\n%b%Creset\" --name-status --grep
  stashgrep = "!f() { for i in `git stash list --format=\"%gd\"` ; \
              do git stash show -p $i | grep -H --label=\"$i\" \"$@\" ; done ; }; f"

  mybad = git add -A && git commit --amend --no-edit && git push --force
  resetorigin = "!git reset --hard origin/$(git rev-parse --abbrev-ref HEAD)"
