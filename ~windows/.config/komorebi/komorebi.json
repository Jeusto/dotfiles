{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.37/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/.config/komorebi.applications.json",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 5,
  "default_container_padding": 5,
  "border": true,
  "border_width": 6,
  "border_offset": -1,
  "border_style": "System",
  "theme": {
    "palette": "Base16",
    "name": "Onedark",
    "unfocused_border": "Base03",
    "bar_accent": "Base0C",
    "monocle_border": "Base0B"
  },
  "stackbar": {
    "height": 40,
    "mode": "OnStack",
    "tabs": {
      "width": 300,
      "focused_text": "#00a542",
      "unfocused_text": "#b3b3b3",
      "background": "#141414"
    }
  },
  "monitors": [
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP"
        },
        {
          "name": "II",
          "layout": "BSP"
        },
        {
          "name": "III",
          "layout": "BSP"
        },
        {
          "name": "IV",
          "layout": "BSP"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "BSP"
        },
        {
          "name": "II",
          "layout": "BSP"
        },
        {
          "name": "III",
          "layout": "BSP"
        },
        {
          "name": "IV",
          "layout": "BSP"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "I",
          "layout": "Rows"
        },
        {
          "name": "II",
          "layout": "Rows"
        },
        {
          "name": "III",
          "layout": "Rows"
        },
        {
          "name": "IV",
          "layout": "Rows"
        }
      ]
    }
  ],
  "floating_applications": [
    {
      "kind": "Exe",
      "id": "Spotify.exe",
      "matching_strategy": "Equals"
    }
  ]
}